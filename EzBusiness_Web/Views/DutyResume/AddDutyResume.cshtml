        $('.selectpicker').selectpicker('refresh');

        $("#PRLR001_CODE").val(0);
        EzAutoCompTxtE("#PRLR001_CODE", "#hdnPRLR001_CODE","/DutyResume/GetLsNo", false, "");
        EzAutoCompTxtE("#EmpCode", "#hdnEmpCode", "/MonthlyAddded/GetEmpList", false, "");
