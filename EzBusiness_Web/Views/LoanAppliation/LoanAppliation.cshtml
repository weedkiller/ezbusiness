                    Act_code: $("[name='Act_code']").val(),
                    LoanType: $("[name='LoanType'] option:selected").val(),
                    ApprovalYN: $("[name=ApprovalYN]").val(),
                    AppliedAmt: $("[name='AppliedAmt']").val(),
