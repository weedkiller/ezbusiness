@model IEnumerable<EzBusiness_ViewModels.Models.Humanresourcepayroll.EmpBankVM>


<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Scripts/EzComNDW.js"></script>
<script>
    $(function () {
        Ezsidetbl("#POList", "#POList tfoot td", false, "#POList thead");
       
    });
   // Ezsidetbl("#POList", "#POList tfoot th", false);
</script>

<table id="POList"  class="table table-bordered table-hover emptbl">
    <thead>
        <tr class="tr">
            <th>Code</th>
            <th>Employee Code</th>     
            <th>Employee Name</th>           
            <th>Bank Name</th>
            <th>Branch Name</th>
            <th>Account No</th>
            <th>EBAN No</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td>Code</td>
            <td>Employee Code</td>
            <td>Employee Name</td>     
            <td>Bank Name</td>
            <td>Branch Name</td>
            <td>Account No</td>
            <td>EBAN No</td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var po in Model)
        {
            <tr>
                <td>
                    @Html.Hidden("hdnprbmCode", po.PRBM003_CODE)
                    @po.PRBM003_CODE
                </td>
                <td>
                    @po.EmpCode
                </td>
                <td>@po.EmpName</td>     
                <td>
                    @po.PRBM001_code
                </td>
                <td>
                    @po.PRBM002_code
                </td>
                <td>
                    @po.Account_no
                </td>
                <td>
                    @po.EBAN_no
                </td>

            </tr>
        }
    </tbody>
</table>
