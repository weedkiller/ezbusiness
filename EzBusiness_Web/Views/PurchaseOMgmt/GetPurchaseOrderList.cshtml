<table id="POList" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>MRCode</th>
            <th>PODate</th>
            <th>Description</th>
            <th>LocationCode</th>
            <th>ProjectCode</th>
            <th>RequesterCode</th>
            <th>PreparedBy</th>
            <th>ResourceType</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var po in Model)
        {
            <tr>
                <td>
                    @Html.Hidden("hdnMRCode", po.PONumber)
                    @po.PONumber
                </td>
                <td>
                    @po.Dates
                </td>
                <td>
                    @po.Description
                </td>
                <td>
                    @po.LocCode
                </td>
                <td>
                    @po.ProjectCode
                </td>
                <td>
                    @po.ReqtBy
                </td>
                <td>
                    @po.PreparedBy
                </td>
                <td>
                    @Html.Hidden("hdnResourceType", @po.ResourceType)
                    @po.ResourceType
                </td>
            </tr>
        }
    </tbody>
</table>
