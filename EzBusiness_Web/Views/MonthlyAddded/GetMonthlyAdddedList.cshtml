@model IEnumerable <EzBusiness_ViewModels.Models.Humanresourcepayroll.MonthlyAdddedVM>



<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Scripts/EzComNDW.js"></script>
<script>
    $(document).ready(function () {
        Ezsidetbl1('#POList', '#POList tfoot td', false, "#POList thead");
        $("#POList").show();
    });
</script>

<div class="col-md-12 table-responsive">
<table id="POList" style="display:none" class="table table-bordered stripe display hover">
    <thead>
        <tr class="tr">
            <th>Code</th>
            <th>Entry Date</th>
            <th>Month</th>
            <th>Year</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td>PRADN001_CODE</td>
            <td>Entry_Date</td>
            <td>TMonth</td>
            <td>TYear</td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var po in Model)
        {
            <tr>
                <td>
                    @Html.Hidden("hdnPRADN001_CODE", po.PRADN001_CODE)
                    @po.PRADN001_CODE
                </td>
                <td>                   
                    @Convert.ToDateTime(@po.Entry_Date).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @po.TMonth
                </td>
                <td>
                    @po.TYear
                </td>

            </tr>
        }
    </tbody>
</table>
</div>
