                var docnameTd = $(tr).find("td:eq(1)");
                var paydeductonTd = $(tr).find("td:eq(2)");

                var editButton = $(this);

                if (hdnEditMode.val() == "true") {
                    var docnameEdit = $(tr).find("[name*='txtNAME']").val().trim();
                    var C_TYPEEdit = $(tr).find("[name*='ddlPayDeductOn1']").val();
