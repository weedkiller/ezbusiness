        $("#btnSave").click(function () {
            var n = 1;//EzAuthenticationBtn("/CodeSettings", "EditIt");
            $("#editshow").hide();
            debugger;
            var opMode = $("#hdnOperationMode").val();
            if (opMode == "Add") {
                // Code for Adding Purchase order
