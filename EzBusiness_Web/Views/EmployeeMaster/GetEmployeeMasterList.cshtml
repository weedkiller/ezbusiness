<table id="POList" class="table table-bordered table-hover editlist" >
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>
                Date Of Birth
            </th>
            <th>
                Contact No
            </th>
            <th>
                EMail Id
            </th>
            <th>
                Nationality
            </th>
            @*<th>
                Division Code
            </th>*@
            <th>
                Location Code
            </th>
            <th>
                VisaLocation Code
            </th>
            <th>
                Reporting Employee
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>
                Date Of Birth
            </th>
            <th>
                Contact No
            </th>
            <th>
                EMail Id
            </th>
            <th>
                Nationality
            </th>
            @*<th>
                    Division Code
                </th>*@
            <th>
                Location Code
            </th>
            <th>
                VisaLocation Code
            </th>
            <th>
                Reporting Employee
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var po in Model)
        {
            <tr>
                <td>
                    @Html.Hidden("hdnMRCode", po.EmpCode)
                    @po.EmpCode
                </td>
                <td>
                    @po.Empname
                </td>
                <td>
                    @Convert.ToDateTime(@po.DOB).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @po.ContactNo
                </td>
                <td>
                    @po.EMail
                </td>
                <td>
                    @po.Nationality
                </td>
                @*<td>
                    @po.DivisionCode
                </td>*@
                <td>
                    @po.LocCode
                </td>
                <td>
                    @po.VisaLocation
                </td>
                <td>
                    @po.ReportingEmp
                </td>

            </tr>
        }
    </tbody>

   
   
</table>
