@model IEnumerable<EzBusiness_ViewModels.Models.Humanresourcepayroll.Employee_VM>
    
@{
    var a = 1;

}

<script src="~/Content/assets/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/EzComNDW.js"></script>
    <script>
       
         
        Ezsidetbl("#POList", "#POList tfoot th", true);
        //a++;
     
    </script>

<table id="POList" class="table table-bordered table-hover editlist">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>
                Date Of Birth
            </th>
            <th>
                Contact No
            </th>
            <th>
                EMail Id
            </th>
            <th>
                Nationality
            </th>
            <th>
                Division Code
            </th>
            <th>
                Location Code
            </th>
            <th>
                VisaLocation Code
            </th>
            <th>
                ReportingEmp
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var po in Model)
        {
            <tr>
                <td>
                    @Html.Hidden("hdnMRCode", po.EmpCode)
                    @po.EmpCode
                </td>
                <td>
                    @po.Empname
                </td>
                <td>
                    @Convert.ToDateTime(@po.DOB).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @po.ContactNo
                </td>
                <td>
                    @po.EMail
                </td>
                <td>
                    @po.Nationality
                </td>
                <td>
                    @po.DivisionCode
                </td>
                <td>
                    @po.LocCode
                </td>
                <td>
                    @po.VisaLocation
                </td>
                <td>
                    @po.ReportingEmp
                </td>

            </tr>
        }
    </tbody>
</table>