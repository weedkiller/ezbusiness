                        var FFM_CRG_GROUP_CODE = $(this).find("[name*='hdnFFM_CRG_GROUP_CODE']").val();
                        

                        $.get("EditFFM_CRG_Group", { FFM_CRG_GROUP_CODE: FFM_CRG_GROUP_CODE }).done(function (response)
                        {
                            $("#DRContainer").html(response);

                            //$("#btnDelete").prop("disabled", false);
                            $("#btnDelete").css("visibility", "");

                            $("#btnPrint").css("visibility", "hidden");
