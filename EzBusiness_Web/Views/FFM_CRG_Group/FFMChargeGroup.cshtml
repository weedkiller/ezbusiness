<script>
    $(function () {
        EzAuthentication("/ChargeGroup");
        var drHtml = $("#DRContainer").html();
        $("#DRListContainer1").hide();
        function GetDrs() {
            $.get("/FFM_CRG_Group/GetChargeGroup", function (response) {
                $("#DRListContainer").html(response);
            });
        }
        $("#btnNew").click(function () {
            var n = EzAuthenticationBtn("/ChargeGroup", "NewIt");
            if (n == 1) {
                $("#editshow").hide();
                $.get("FFM_CRG_Group/AddFFM_CRG_Group", function (response) {
                    $("#DRContainer").html(response);
                });
                $(this).css("visibility", "hidden");
                EzbtnNewAcVis();
                $("#btnEdit").prop("disabled", true);
                $("#DRListContainer1").hide();
            }
        });
        $(".alert-close").click(function () {
            $("#editshow").hide();
        });
        $("#btnEdit").click(function () {
            var n = EzAuthenticationBtn("/ChargeGroup", "ViewIt");
            if (n == 1) {
                $(this).css("visibility", "hidden");
                EzbtnEditAcVis();
                $("#DRListContainer1").show();
                GetDrs();
                $("#editshow").show();
            }
        });

        $("#btnCancel").click(function () {
            $("#DRContainer").html(drHtml);
            EzbtnCancelAcVis();
            $("#DRListContainer1").hide();
            $("#editshow").hide();
        });

        $("#btnDelete").click(function () {
            var n = EzAuthenticationBtn("/ChargeGroup", "DeleteIt");
            if (n == 1) {
                const swalWithBootstrapButtons = Swal.mixin({
                    confirmButtonClass: 'btn btn-success',
                    cancelButtonClass: 'btn btn-danger',
                    buttonsStyling: false,
                })
                swalWithBootstrapButtons.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                    reverseButtons: true
                }).then((result) => {
                    if (result.value) {

                        var FFM_CRG_GROUP_CODE = $("[name*='FFM_CRG_GROUP_CODE']").val();
                       
                        $.getJSON("/DeleteFFM_CRG_Group", { FFM_CRG_GROUP_CODE: FFM_CRG_GROUP_CODE }).done(function (data) {
                                if (data.DeleteFlag) {
                                    window.location = '/ChargeGroup'
                            } else {
                                    EzAlertdele(FFM_CRG_GROUP_CODE);
                            }
                        });
                        swalWithBootstrapButtons.fire(
                          'Deleted!',
                          'Your Code has been deleted.',
                          'success'
                        )

                    } else if (
                        // Read more about handling dismissals
                      result.dismiss === Swal.DismissReason.cancel
                    ) {
                        swalWithBootstrapButtons.fire(
                          'Cancelled',
                          'Your Code is safe :)',
                          'error'
                        )
                    }
                })
                $("#editshow").hide();
            }
        });
        $("#btnSave").click(function () {
            var n = EzAuthenticationBtn("/ChargeGroup", "EditIt");
            var k = 0;
            $("#editshow").hide();
            var opMode = $("#hdnOperationMode").val();

            if (opMode == "Add") {
                // Code for Adding MainTable
                var FNMCRG_Grp = {
                    EditFlag: false,                   
                    FFM_CRG_GROUP_CODE:$("[name*='FFM_CRG_GROUP_CODE']").val(),
                    NAME: $("[name*='NAME']").val(),
                    DISPLAY_STATUS: $("input:radio[name=DISPLAY_STATUS]:checked").val(),
                    VAT_CODE: $("[name*='VAT_CODE']").val(),
                    VAT_GL_CODE: $("[name*='VAT_GL_CODE']").val(),
                    Name_Arabic: $("[name*='Name_Arabic']").val(),
                };



                var validationResult = ValidateForm(FNMCRG_Grp);
                if (validationResult.formValid) {

                    $.post("/SaveFFM_CRG_Group", FNMCRG_Grp).done(function (response) {
                        if (response.SaveFlag && !response.ErrorMessage.length > 0) {


                            EzbtnsaveAcVis("#DRContainer");
                            EzAlertSave();
                            $("#DRContainer").html(drHtml);
                            GetDrs();

                        } else {
                            // Ezerrormsg("#ErrorMessage", validationResult.ErrorMessage);
                            EzAlerterrtxt(response.ErrorMessage);
                        }
                    });

                } else {
                    //Ezerrormsg("#ErrorMessage", validationResult.ErrorMessage);
                    EzAlerterrtxt(validationResult.ErrorMessage);
                }
            } else if (opMode == "Edit" && n==1 ) {
                // Code for Adding Purchase order
                var FNMCRG_Grp = {
                    EditFlag: true,
                    FFM_CRG_GROUP_CODE: $("[name*='FFM_CRG_GROUP_CODE']").val(),
                    NAME: $("[name*='NAME']").val(),
                    DISPLAY_STATUS: $("input:radio[name=DISPLAY_STATUS]:checked").val(),
                    VAT_CODE: $("[name*='VAT_CODE']").val(),
                    VAT_GL_CODE: $("[name*='VAT_GL_CODE']").val(),
                    Name_Arabic: $("[name*='Name_Arabic']").val(),
                };



                var validationResult = ValidateForm(FNMCRG_Grp);
                    if (validationResult.formValid) {

                        $.post("/SaveFFM_CRG_Group", FNMCRG_Grp).done(function (response) {
                                if (response.SaveFlag && !response.ErrorMessage.length > 0) {
                                    EzAlertSave();
                                    EzbtnsaveAcVis("#DRContainer");
                                    $("#DRContainer").html(drHtml);
                                    GetDrs();
                                } else {
                                    EzAlerterrtxt(response.ErrorMessage);
                                }
                            });
                } else {
                    EzAlerterrtxt(validationResult.ErrorMessage);
                }
            }


        });

