    <div class="row-fluid">
        <!-- <h3>Contractor Information</h3> -->
        <div class="span12">
            <div class="widget-content nopadding">
                <table class="table table-bordered" id="monthlyadddeductreport">
                    <thead>
                        <tr>
                            <th>Sr.No.</th>
