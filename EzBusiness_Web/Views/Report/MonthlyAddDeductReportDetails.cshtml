    <div class="col-md-12 no-padding navbar-expand-lg">

        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <i class="icon-calendar"></i>
                <h3 class="panel-title">Monthly Addition/Deduction Report</h3>
            </div>
            <div class="panel-body" style="margin-left:10px;">
                <div class="row">
                    <div class="col-md-4">
                        <div class="span4">
                            <div class="form-group">
                                <span style="color:red;float: left;padding: 0 5px 0 0;">*</span>
                                <label for="exampleInputPassword1">From Date</label>
                                <div class="controls">
                                    @*<input type="date" required name="" id="fnlfdatetxt" placeholder="" class="form-control">*@
                                    <input id="fnlfdatetxt" class="form-control datepicker" name="fnlfdatetxt" />
                                    <span class="add-on calendercls"><i class="icon-calendar"></i></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="span4">
                            <div class="form-group">
                                <span style="color:red;float: left;padding: 0 5px 0 0;">*</span>
                                <label for="exampleInputPassword1">To Date</label>
                                <div class="controls">
                                    <input id="fnltdatetxt" class="form-control datepicker" name="fnltdatetxt" />
                                    @*<input type="date" required name="" id="fnltdatetxt" placeholder="" class="form-control">*@
                                    <span class="add-on calendercls"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="span4">
                            <div class="form-group">
                                <label for="exampleInputPassword1">EmpCode</label>
                                <div class="controls">
                                    <input type="text" required name="" id="empcodetxt" placeholder="" class="form-control">
                                    <span class="add-on calendercls"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="span4">
                            <div class="form-group">

                                <label for="exampleInputPassword1">EmpName</label>
                                <div class="controls">
                                    <input type="text" required name="" id="empnametxt" placeholder="" class="form-control">
                                    <span class="add-on calendercls"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span4" style="margin-top:2%;">
                        <button type="button" class="btn btn-primary truebtn" id="mnthbtnSearchData">
                            <i class="icon-zoom-out"> Search</i>
                        </button>
                        <button type="button" class="btn btn-warning btnexport truebtn" id="btncancel">
                            <i class="icon-cancel"> Cancel</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
