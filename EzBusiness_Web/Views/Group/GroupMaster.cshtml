<script>
    $(function () {
        EzAuthentication("/Group");
        var n = EzAuthenticationBtn("/Group", "ViewIt");
        if (n == 1) {
            Ezsidetbl("#tblUnits", "#tblUnits tfoot th", true);
            $('#tblUnits').show();

        } else {
            $('#tblUnits').hide();
