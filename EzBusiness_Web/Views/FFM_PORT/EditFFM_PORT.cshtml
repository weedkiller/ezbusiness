@model EzBusiness_ViewModels.Models.FreightManagement.FFM_PORT_VM

<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Scripts/bootstrap-select.min.js"></script>
<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/EzComNDW.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Styles/jquery-ui.css" rel="stylesheet" />

<style>
     .ui-autocomplete {
         max-height: 100px;
         overflow-y: auto;
         /* prevent horizontal scrollbar */
         overflow-x: hidden;
     }
     /* IE 6 doesn't support max-height
    * we use height instead, but this forces the menu to always be this tall
    */
     * html .ui-autocomplete {
         height: 100px;
     }
</style>

<script type="text/javascript">
    $(document).ready(function () {

        $('#hdncountry').val($('#COUNTRY').val());
        EzAutoCompTxt('#COUNTRY', '#hdncountry', "/FFM_PORT/GetCountry", false, "");
       

        $('.selectpicker').selectpicker('refresh');
    });
</script>
<div class="row">
    <div class="col-md-12">
        <div class="tabbable-line boxless tabbable-reversed" id="POContainer">
            <div class="custom-form-wrapper">
                <div id="POContainer">
                    <div class="row">
                        <div class="custom-form-wrapper">
                            <!-- BEGIN FORM-->
                             <div class="form-horizontal">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">PORT CODE</label>
                                                <div class="col-md-8 input-field">
                                                    @Html.TextBoxFor(m => m.FFM_PORT_CODE, new { @class = "form-control", @placeholder = "Code", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label col-md-4">NAME</label>
                                                    <div class="col-md-8 input-field">
                                                        @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                          <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">COUNTRY</label>
                                                <div class="col-md-8 input-field">
                                                    @*@Html.DropDownListFor(m => m.COUNTRY,Model.CountryList ,new { @class = "form-control", @data_live_search = "true" })*@         
                                                    @Html.TextBoxFor(m => m.COUNTRY, new { @class = "form-control",@placeholder="Select Country" })
                                                    <input id="hdncountry" type="hidden" class="form-control" name="hdncountry" value="-1" />                                                                                                
                                                    @*@Html.HiddenFor(m => m.COUNTRY)*@                                                    
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">TERMINAL</label>
                                                <div class="col-md-8 input-field">
                                                    @Html.TextBoxFor(m => m.TERMINAL, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">LANGITUDE</label>
                                                <div class="col-md-8 input-field">
                                                    @Html.TextBoxFor(m => m.LANGITUDE, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">LATITUDE</label>
                                                <div class="col-md-8 input-field">
                                                    @Html.TextBoxFor(m => m.LATITUDE, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">Port Type</label>
                                                
                                                    @*@Html.TextBoxFor(m => m.LATITUDE, new { @class = "form-control" })*@
                                                    <div class="col-md-8 input-field">
                                                        @{
                                                            var TypeListdata = new SelectList(new[]
                                                                     {
                                                        new SelectListItem { Text = "AIR", Value = "AIR" },
                                                        new SelectListItem { Text = "SEA", Value = "SEA"},
                                                         }, "Value", "Text");
                                                        }
                                                        @Html.DropDownListFor(m => m.PortType, TypeListdata, new { @class = "form-control selectpicker", @data_live_search = "true" })
                                                    </div>

                                              
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">Display Status</label>
                                                <div class="col-md-8 input-field">
                                                    @{
                                                        var TypeList = new SelectList(new[]
                                                                 {
                                                        new SelectListItem { Text = "YES", Value = "Y" },
                                                        new SelectListItem { Text = "NO", Value = "N"},                                                  
                                                         }, "Value", "Text");
                                                    }
                                                    @Html.DropDownListFor(m => m.DISPLY_STATUS , TypeList, new { @class = "form-control selectpicker", @data_live_search = "true" })                                              
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                                                        
                                </div>
                               </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker('refresh');      
        $("#NAME").on("focus", function () {
            $("#COUNTRY").removeClass('selectpicker');
            EzDropFill("COUNTRY", "/FFM_PORT/GetCountry1");
        });
        $("#COUNTRY").on('click', function () {
            debugger;            
            $("#COUNTRY").removeClass('selectpicker');
            EzDropFill("COUNTRY", "/FFM_PORT/GetCountry1");
        });
        
    });
</script>