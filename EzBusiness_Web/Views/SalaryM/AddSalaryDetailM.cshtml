                //$("#tablePODetails").each(function () {
                //    amount += $(this).val() == null ? 0 : parseInt($(this).val());
                //});
                //just update the total to sum
                $("[name*='TOTAL']").val(sum);
                //$("[name*='ContractAmountYearly']").val(sum1);
            }


        });
    
