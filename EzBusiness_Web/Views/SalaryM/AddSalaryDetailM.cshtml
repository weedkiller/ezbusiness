                        tr.find("[name='Code" + counter + "']").val(ary[i].Code);
                        tr.find("[name='Name" + counter + "']").val(ary[i].Name);
                        tr.find("[name='Accountcode" + counter + "']").val(ary[i].Accountcode);
                        tr.find("[name='AMOUNT" + counter + "']").val('0.00');

                        $("[name*='TOTAL']").val('0.00');
