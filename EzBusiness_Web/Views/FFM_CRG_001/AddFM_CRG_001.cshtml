<script>
    $(function () {
        arr1 = [];
        $('.selectpicker').selectpicker('refresh');
        //EzTableRowDel("#tablePODetails", "[name*='btnDelete']");
        var counter = parseInt($("#hdnCounter").val());
       $("#tablePODetails").on("click", "[name*='btnDelete']", function () {
          $(this).closest("tr").remove();
            counter = 1;
             $('#tablePODetails tbody tr td:nth-child(1)').each(function (e) {
                 var tr1 = $(this).closest("tr");
                 tr1.find(":first").text(counter);
                 counter++;
             });
        });
        var counter = $('#hdnCounter').val();
        $('.selectpicker').selectpicker('refresh');
        $("#tablePODetails").on("change", "[name*='txtjobcode']", function () {
            
            if (EzHeadTxtvalid("[name *= 'FFM_CRG_GROUP_CODE'] option:selected", "#tablePODetails tbody tr:last", "[name *= 'txtjobcode']", "Please Enter FFM GROUP CODE", "0", "0") == true) {
                return;
            }

            if (EzHeadTxtvalid("[name *= 'FFM_CRG_001_CODE']", "#tablePODetails tbody tr:last", "[name *= 'txtjobcode']", "Please Enter Charge Code", '', '') == true) {
                return;
            }

            if (EzHeadTxtvalid("#NAME", "#tablePODetails tbody tr:last", "[name *= 'txtjobcode']", "Please Enter Name", '0', '0') == true) {
                return;
            }
            var tr = $(this).closest('tr');
            var JobCode = tr.find("[name*='txtjobcode'] option:selected").text();
            var array = JobCode.split("-");
            //   var counter =1;
            tr.find("[name*='txtjobname']").val(array[1].trim())
          
          //  var tcunt = $("#tablePODetails").find("tr").length;
            drec = [];
            $('#tablePODetails tbody tr td:nth-child(1)').each(function () {
                //add item to array
                var ab = $(this).find("[name *= 'txtjobcode']").val();
                drec.push(ab);
            });

            drec.splice($.inArray(tr.find("[name *= 'txtjobcode']").val(), drec), 1);
            if ($.inArray(tr.find("[name *= 'txtjobcode']").val(), drec) >= 0) {
                var dr = tr.find("[name *= 'txtjobcode']").val();
                tr.css("background", "red");
                tr.find("[name *= 'txtjobcode']").focus();
                EzAlerterrtxt("Already Exist Code '" + dr + "'");
                tr.find("[name *= 'txtjobcode']").val('');


            }
            else {
                tr.css("background", "");
                if (tr.is(":last-child")) {
                    tr.clone(true, true).insertAfter(tr);
                    var trLast = $("#tablePODetails tr:last");
                    $("<td><button type='button' class='btn btn-danger' name='btnDelete" + counter + "')'><span class='glyphicon glyphicon-remove'></span></button></td>")
                               .appendTo("#tablePODetails tbody tr:nth-last-child(2)");
                    //trLast.find("[name*='txtsrno']").val(tcunt);
                    trLast.find("[name*='txtjobcode'] option:selected").val('');
                    trLast.find("[name*='txtjobname']").val('');
                    trLast.find("[name*='txtoperationtype']").val('');
                    trLast.find("[name*='txtincomeact'] option:selected").val('');
                    trLast.find("[name*='txtexpenceacgt'] option:selected").val('');
                    trLast.find("[name *= 'txtsrno']").attr({
                        "name": ("txtsrno" + counter)
                    });
                    trLast.find("[name *= 'txtjobcode']").attr({
                        "name": ("txtjobcode" + counter)
                    });
                    trLast.find("[name *= 'txtjobname']").attr({
                        "name": ("txtjobname" + counter)
                    });
                    trLast.find("[name *= 'txtoperationtype']").attr({
                        "name": ("txtoperationtype" + counter)
                    });
                    trLast.find("[name *= 'txtincomeact']").attr({
                        "name": ("txtincomeact" + counter)
                    });
                    trLast.find("[name *= 'txtexpenceacgt']").attr({
                        "name": ("txtexpenceacgt" + counter)
                    });
                    trLast.find(":first").text(counter);
                }
                counter++;
            }

         
         
        });

       
    });
</script>

