        $(".alert-close").click(function () {
            $("#editshow").hide();
        });
    
        $("#btnEdit").click(function () {
            var n = EzAuthenticationBtn("/PyrollConfi", "ViewIt");
            if (n == 1) {
                $(this).prop("disabled", true);
                EzbtnEditAc();
